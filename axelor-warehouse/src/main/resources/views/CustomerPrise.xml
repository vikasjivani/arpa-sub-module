<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.3.xsd">

  <grid name="warehouse-customer-prise-grid" title="Customer Prise"
    model="com.axelor.apps.warehouse.db.CustomerPrise">
    <field name="customer" readonlyIf="customer != null"
      onChange="action-customer-prise-attrs-set-personal-prise"/>
    <field name="singlePiecePrise" title="Personal Single Piece Price"
      onChange="action-customer-prise-multiply-cartoon-prise"/>
    <field name="unitPrise" title="Personal Unit Price"/>
  </grid>

  <form name="warehouse-customer-prise-form" title="Customer Prise"
    model="com.axelor.apps.warehouse.db.CustomerPrise">
    <panel name="firstPanel">
      <field name="customer" readonlyIf="customer != null"
        onChange="action-customer-prise-attrs-set-personal-prise"/>
      <field name="singlePiecePrise" title="Personal Single Piece Price"/>
      <field name="unitPrise" title="Personal Unit Price"/>
    </panel>
  </form>

  <action-attrs name="action-customer-prise-attrs-set-personal-prise">
    <attribute name="value" for="singlePiecePrise" expr="eval: __parent__.pieceSalePrice"/>
    <attribute name="value" for="unitPrise" expr="eval: __parent__.unitSalePrice"/>
  </action-attrs>

  <action-attrs name="action-customer-prise-multiply-cartoon-prise">
    <attribute name="value" for="unitPrise"
      expr="eval: __parent__.unitPiece * singlePiecePrise"/>
  </action-attrs>

</object-views>

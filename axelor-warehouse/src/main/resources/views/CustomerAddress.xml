<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.3.xsd">

  <grid name="warehouse-customer-address-grid" title="Customer Address"
    model="com.axelor.apps.warehouse.db.CustomerAddress">
    <field name="addressL4"/>
    <field name="addressL5"/>
    <field name="zip"/>
    <field name="city"/>
    <field name="country"/>
    <field name="fullAddess"/>
  </grid>

  <form name="warehouse-customer-address-form" title="Customer Address"
    model="com.axelor.apps.warehouse.db.CustomerAddress"
    onSave="action-customer-address-set-full-address">
    <panel name="firstPanel">
      <field name="addressL4" required="true"/>
      <field name="addressL5"/>
      <field name="zip" required="true"/>
      <field name="city" required="true"/>
      <field name="country" required="true"/>
      <field name="fullAddess" colSpan="12" readonly="true"/>
    </panel>

  </form>

  <action-attrs name="action-customer-address-set-full-address">
    <attribute name="value" for="fullAddess"
      expr="eval: addressL4 + ', ' + zip+ ' ' + city + ' ' + country"/>
  </action-attrs>

</object-views>

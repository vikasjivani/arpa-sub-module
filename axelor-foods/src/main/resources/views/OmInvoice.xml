<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.3.xsd">
    
    <grid name="om-invoice-grid" title="Invoices" model="com.axelor.apps.om.db.OmInvoice">
	    <field name="invoiceNumber" title="Container"/>
	    <field name="customer" />
	    <field name="invoiceAmount" />
	    <field name="invoiceDate"/>
	    <field name="currency" />
    </grid>

	<form name="om-invoice-form" title="Invoice" model="com.axelor.apps.om.db.OmInvoice">
		
		<panel name="firstPanel">
		    <field name="invoiceNumber" title="Container"/>
		    <field name="customer" />
		    <field name="invoiceAmount" />
		    <field name="invoiceDate"/>
		    <field name="currency" />
		    <field name="deliveryAddress" widget="html"/>
		    
		    <field name="description" widget="html"/>
		</panel>
		
	</form>
	</object-views>
